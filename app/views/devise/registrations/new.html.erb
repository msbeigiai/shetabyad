<section id="form-devise">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>ثبت نام</h2>
					</div>
					<div class="panel-body">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%= devise_error_messages! %>
							
							<div class="form-group">
								<%= f.text_field :username, autofocus: true, placeholder: "نام و نام خانوادگی" , class: "form-control" %>
							</div>
							
							<div class="form-group">
								<%= f.email_field :email, autofocus: true, placeholder: "ایمیل" , class: "form-control" %>
							</div>

							<div class="form-group">
								<%= f.password_field :password, autocomplete: "off", placeholder: "رمز عبور", class: "form-control" %>
							</div>

							<div class="form-group">
								<%= f.password_field :password_confirmation, placeholder: "تکرار رمز عبور", autocomplete: "off", class: "form-control" %>
							</div>

							<div class="actions form-group">
								<%= f.submit "ساخت حساب کاربری", class: "btn btn-block btn-success" %>
							</div>
						<% end %>
					</div>
					<div class="panel-footer">
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
