<section id="form-devise">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h2>ورود</h2>
					</div>
					<div class="panel-body">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%= devise_error_messages! %>

							<div class="form-group">
								<%= f.email_field :email, autofocus: true, placeholder: "ایمیل" , class: "form-control" %>
							</div>

							<div class="form-group">
								<%= f.password_field :password, autocomplete: "off", placeholder: "رمز عبور", class: "form-control" %>
							</div>
							<% if devise_mapping.rememberable? -%>
								<div class="form-group">
									<%= f.check_box :remember_me %>
									<%= f.label 'من را به خاطر بسپار' %>
								</div>
							<% end -%>

							<div class="actions form-group">
								<%= f.submit "ورود", class: "btn btn-block btn-success" %>
							</div>
						<% end %>
					</div>
					<div class="panel-footer">
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

