<section id="form-devise-password" class="devise-form">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3>رمز عبور را فراموش کرده اید؟</h3>
					</div>
					<div class="panel-body">
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
						<%= devise_error_messages! %>

							<div class="form-group">
								<%= f.email_field :email, autofocus: true, placeholder: "ایمیل", class: "form-control", required: true %>
							</div>

							<div class="actions form-group">
								<%= f.button "بازیابی رمز عبور", class: "btn btn-block btn-success", data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> بازیابی رمز عبور" } %>
							</div>
						<% end %>
					</div>
					<div class="panel-footer">
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>