<% tutorials.each do |tutorial| %>
  <div class="col-md-8 col-xs-12 col-sm-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 well">
    <div class="col-md-3 col-xs-4 col-sm-4 pull-right">
      <% if tutorial.images? %>
        <%= image_tag tutorial.images_url(:thumb) %>
      <% end %>
    </div>
    <div class="col-md-9 col-xs-8 col-sm-8">
      <h2><%= link_to tutorial.title, tutorial_path(tutorial) %></h2>
      <p><%= markdown(tutorial.description) %></p>
    </div>
  </div>
<% end %>