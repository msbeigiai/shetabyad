<p id="notice"><%= notice %></p>

<h1>Tutorial Types</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutorial_types.each do |tutorial_type| %>
      <tr>
        <td><%= tutorial_type.title %></td>
        <td><%= link_to 'Show', tutorial_type %></td>
        <td><%= link_to 'Edit', edit_tutorial_type_path(tutorial_type) %></td>
        <td><%= link_to 'Destroy', tutorial_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

