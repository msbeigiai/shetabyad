<section id="lessons-index">
	<div class="lessons-index-hero">
		<div class="container">
			<div class="row">
				<div class="col-md-6 pull-right">
					<h1>همه آموزش ها</h1>
				</div>
				<div class="col-md-6">
					<% sum = 0 %>
					<% @lessons.each do |lesson| %>
						<% sum += lesson.get_upvotes.size %>
					<% end %>
					<p><i class="fa fa-heart fa-lg"></i> <%= sum %> بار پسندیده شده</p>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row pull-right">
			<% @lessons.each do |lesson| %>
				<div class="col-md-4">
					<div class="panel panel-default">
						<div class="panel-heading">
							<% if lesson.image? %>
								<%= image_tag lesson.image_url(:thumbnail), class: "img-responsive" %>
							<% end %>
							<h4><%= link_to lesson.title, lesson %></h4>
						</div>
						<div class="panel-body">
							<%= markdown(sanitize(lesson.description[0, 200] + '...')) %>
						</div>
						<div class="panel-footer">
							<i class="fa fa-heart fa-lg pull-left"></i><span class="like-number pull-left"><%= lesson.get_upvotes.size %></span>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>		
</section>