<section id="lesson-show">
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="container">
				<div class="row">
					<div class="col-md-10 col-md-offset-1">
						<% unless @lesson.video.nil? %>
							<div id="<%= @lesson.video.aparat_id %>"><script type="text/JavaScript" src="https://www.aparat.com/embed/<%= @lesson.video.aparat_embed %>?data[rnddiv]=<%= @lesson.video.aparat_id %>&data[responsive]=yes"></script></div>
						<% end %>
					</div>
				</div>
			</div>
			<% if @lesson.image? %>
				<div class="container">
					<div class="col-md-10 col-md-offset-1">
						<%= image_tag @lesson.image_url, class: "img-responsive" %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="container">
			<div class="row title">
				<div class="col-md-10 col-md-offset-2">
					<h4><em>دسته:</em> <%= link_to @lesson.tutorial.title, @lesson.tutorial, class: "to-tutorial",
						data: { toggle: 'tooltip', placement: 'left', title: "برگشت به دسته #{@lesson.tutorial.title}" } %></h4>
					<div class="col-md-6 pull-right">
						<h1><%= @lesson.title %></h1>
					</div>
					<div class="col-md-6">
						<% unless user_signed_in? %>
							<%= link_to '', like_lesson_path(@lesson.id), remote: true, id: "like_#{@lesson.id}",
								class: "fa fa-heart-o fa-2x #{liked_lesson @lesson}", data: { toggle: 'tooltip', placement: 'left', title: "برای پسندیدن این درس نیاز به ورود به سایت دارید" } %>
							<span class="like-number"><%#= @lesson.get_upvotes.size %></span>
						<% end %>
						<%  if user_signed_in? && current_user %>
							<%= link_to '', like_lesson_path(@lesson.id), remote: true, id: "like_#{@lesson.id}",
							class: "fa fa-heart fa-2x #{liked_lesson @lesson}", data: { toggle: 'tooltip', placement: 'left', title: "می پسندید؟" } %>
							<span class="like-number"><%#= @lesson.get_upvotes.size %></span>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-2 pull-right">
					<%= render 'list_lessons', lessons: all_lessons %>
				</div>
				<div class="col-md-10">
					<div class="panel-body">
						<p><%= markdown(@lesson.description) %></p>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-10">
					<div class="panel-footer">
						<%= commontator_thread(@lesson) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	$(function () {
		$('[data-toggle="tooltip"]').tooltip()
	})
</script>