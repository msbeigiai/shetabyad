<div id="comment">
  <div class="user-name">
    <%= comment.user.email %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
    <%= link_to lesson_comment_path(lesson, comment), method: :delete, data: {lesson_id: lesson.id, value: lesson.comments.count, confirm: "Are you sure?" }, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do %>
      <span class="glyphicon glyphicon-remove delete-comment-icon"></span>
    <% end %>
  <% end %>
</div>